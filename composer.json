    "ext-libxml": "*",
    "ext-dom": "*",
    "ext-curl": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "9.5.*",
    "squizlabs/php_codesniffer": "^3.5.6",
    "phpstan/phpstan": "^0.12.43",
